@model GroupFormViewModel

@{
    ViewData["Title"] = "Създаване на група";
}

<nav class="d-flex" style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-action=""><i class="fa-solid fa-arrow-left"></i> Моите групи</a>
        </li>
    </ol>
</nav>

<h3 class="text-center text-secondary">@ViewData["Title"]</h3>

<div class="row justify-content-center">
    <div class="p-3 col-md-6">
        <form asp-action="Add" enctype="multipart/form-data" method="post">
            <div class="form-floating">
                <input asp-for="Name" class="form-control" aria-required="true" />
                <label asp-for="Name" class="form-label"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mt-1">
                <input asp-for="ShortName" class="form-control" aria-required="true" />
                <label asp-for="ShortName" class="form-label"></label>
                <span asp-validation-for="ShortName" class="text-danger"></span>
            </div>
            <div class="form-floating mt-1">
                <textarea asp-for="Description" class="form-control" aria-required="true"></textarea>
                <label asp-for="Description" class="form-label"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label for="postedFile" class="form-label">Картинка</label>
                <input name="postedFile" id="postedFile" class="form-control" aria-required="true" type="file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="text-center mt-3">
                <a asp-action="" class="btn btn-outline-secondary">Отказ</a>
                <button type="submit" class="btn btn-primary">Създай</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_FontAwesomePartial" />
}
